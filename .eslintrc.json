{
  "env": {
      "browser": true,
      "node": true,
      "commonjs": true,
      "es6": true,
      "mocha": true
  },
  "globals": {
    "Remarkable": true,
    "$": true,
    "process": true,
    "Mailin": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
      "ecmaVersion": 9,
      "sourceType": "module"
  },
  "plugins": [
    "mocha"
  ],
  "rules": {
    "mocha/no-exclusive-tests": "error",
    "indent": [
        "error",
        2
    ],
    "linebreak-style": "off",
    "quotes": [
        "error",
        "single",
        {
        "allowTemplateLiterals": true
        }
    ],
    "semi": [
        "error",
        "always"
    ],
    "no-console": "off",
    "no-trailing-spaces": [
        "error"
    ]
  }
}